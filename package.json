{
  "name": "smart-goal-planner",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "scripts": {
  "start": "json-server --watch db.json --host 0.0.0.0 --port $PORT",
  "build": "react-scripts build",
  "server": "json-server --watch db.json --port 3000",
  "dev": "concurrently \"npm run start\" \"npm run server\""
}

  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "json-server": "^0.17.3",
    "vite": "^7.0.5"
  }
}
